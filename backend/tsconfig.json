{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "jest"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
